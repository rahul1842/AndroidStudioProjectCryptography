<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anew">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.anew">

        <!-- MainActivity: The entry point of the app -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RailFenceActivity: For Rail Fence Cipher -->
        <activity android:name=".RailFenceActivity"></activity>

        <!-- DiffieHellmanActivity: For Diffie-Hellman key exchange -->
        <activity android:name=".DiffieHellmanActivity"></activity>

        <!-- RSAActivity: For RSA encryption/decryption -->
        <activity android:name=".RSAActivity"></activity>

    </application>

</manifest>
